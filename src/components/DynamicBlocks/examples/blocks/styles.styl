.avatarUploader {
  :global(.ant-upload){
    width: 100%;
    height: 125px;
  }
}

.documentLoaderContainer {
  flex-basis: 170px;
  width: 170px;
  margin: 0px;

  :global(.ant-form-item-label){
    max-width: 100%;
    text-align: center;
    white-space: normal;
    height: 50px;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
  }

  &.vertical {
    :global(.ant-form-item-label){
      height: auto;
    }
  }
}
