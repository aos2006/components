breakpoints = {
  phone: {
    min: 320px,
    max: 768px,
  },
  md: {
    min: 400px,
  },
  tablet: {
    min: 768px,
    max: 1024px
  },
  desktop: {
    min: 1024px,
  }
}

min-screen(minWidth) {
  @media screen and (min-width: minWidth) {
    {block}
  }
}

screen(minWidth, maxWidth) {
  @media screen and (min-width: minWidth) and (max-width: maxWidth) {
    {block}
  }
}

phone-query() {
  +min-screen(breakpoints.phone.min) {
    {block}
  }
}

md-query() {
  +min-screen(breakpoints.md.min) {
    {block}
  }
}

tablet-query() {
  +min-screen(breakpoints.tablet.min) {
    {block}
  }
}


desktop-query() {
  +min-screen(breakpoints.desktop.min) {
    {block}
  }
}