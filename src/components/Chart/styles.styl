.chartInfoLine {
  border-bottom: 1px solid $grey1;
  padding: 0 15px;
  line-height: 37px;
  min-height: 38px;

  .chartInfoContainer {
    display: flex;
    flex-flow: row nowrap;
    justify-content: flex-start;
  }

  .chartInfoName {
    font-size: 14px;
    margin-right: 15px;
    font-weight: bold;
  }

  .chartInfoLastPrice {
    transition: color .5s;
    font-weight: bold;
    margin-right: 15px;

    &.chartInfoLastPriceDown {
      color: $red1;
    }

    &.chartInfoLastPriceUp {
      color: $green1;
    }
  }

  .chartInfoChangeBlock {
    font-size: 12px;
    color: $grey3;
    margin-left: auto;
    overflow: hidden;
    height: 37px;

    > div {
      float: right;
    }

    .chartInfoChangeKey {
      margin-right: 5px;
    }

    .chartInfoChangeValue {
      margin-right: 20px;

      &.noMargin {
        margin-right: 0;
      }
    }

    .changePercent {
      &.up {
        color: #3DBD7D;
      }
      &.down {
        color: $red1;
      }
    }

  }
}

.chartContainer {
  position: relative;
  width: 100%;

  .chartWrapper {
    width: 100%;
    height: 532px;
    position: relative;

    .resizer {
      position: absolute;
      border: 6px solid #d3d4d6;
      z-index: 2;
      right: 0;
      bottom: -10px;
      border-left-color: transparent;
      border-top-color: transparent;
      cursor: row-resize;
    }

    .chartWrapperInner {
      height: 100%;
      padding: 0 0 0 1px;

      &.overflowed {
        pointer-events: none;

        &:after {
          content: '';
          position: absolute;
          z-index: 1;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
        }
      }
    }
  }

  .chartHeader {
    position: absolute;
    z-index: 1;
    top: 6px;
    transform: translateX(7px);
    transition: transform .2s;

    &.withToolbar {
      transform: translateX(59px);
    }
  }

  .chartFooter {
    padding: 5px 0 0 5px;
  }

  .button {
    margin-right: 4px;
    vertical-align: top;
    height: 28px;
    padding: 0;
    font-size: 11px;
    width: 40px;
    border-color: #c9cbcd;
    font-weight: 500;
    color: $grey3;

    &:hover:not(:disabled) {
      color: $blue1;
      background: alpha($blue1, 0.3);
      border-color: transparent;
    }

    &.active {
      color: #fff;
      background: $blue1;
      border-color: $blue1;
    }
  }
}

.select {
  margin-right: 4px;
  width: 80px;
  font-weight: 500;

  :global(.ant-select-selection) {
    height: 28px;
    border-color: #c9cbcd;
    box-shadow: none !important;

    :global(.ant-select-selection__rendered) {
      line-height: 27px;
      font-size: 11px;
    }

    :global(.ant-select-selection-selected-value) {
      color: $grey3;
      transition: color .2s;
    }

    :global(.ant-select-arrow) {
      transition: color .2s;
      border: 4px solid transparent;
      border-top-color: $grey3;
      margin-top: 3px;

      &:before {
        display: none;
      }
    }
  }

  &:global(.ant-select-enabled) {
    :global(.ant-select-selection) {
      &:hover {
        color: $blue1;
        background: alpha($blue1, 0.3);
        border-color: transparent;

        :global(.ant-select-selection-selected-value) {
          color: $blue1;
        }

        :global(.ant-select-arrow) {
          border-top-color: $blue1;
        }
      }
    }
  }

  &.selectActive {
    :global(.ant-select-selection) {
      background: $blue1 !important;
      border-color: $blue1 !important;

      :global(.ant-select-selection-selected-value) {
        color: #fff !important;
      }

      :global(.ant-select-arrow) {
        border-top-color: #fff !important;
      }
    }
  }
}

.selectDropdown {
  :global(.ant-select-dropdown-menu-item) {
    font-size: 11px;
  }

  :global(.ant-select-dropdown-menu-item-disabled) {
    display: none;
  }
}
