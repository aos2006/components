.sell {
  color: #f00;
}

.buy {
  color: #3dbd7d;
}

  .historyTable {
    * {
      font-family:  "Helvetica Neue For Number", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", "Helvetica Neue", Helvetica, Arial, sans-serif!important;
    }

    div[role="columnheader"] {
      span {
        font-size: 11px;
        font-weight: 500;
      }
      .headerCell {
        padding-right: 2px;
        padding-left: 2px;
      }

      &:first-of-type {
       .headerCell {
         padding-left: 10px;
       }
      }

      &:last-of-type {
        .headerCell {
          padding-right: 10px;
        }
      }
    }

     div[role="gridcell"] {
       .cell {
         padding-left: 2px;
         padding-right: 2px;
       }
       &:last-of-type {
         .cell {
           padding-right: 10px;
         }
       }
       &:first-of-type {
         .cell {
           padding-left: 10px;
           padding-right: 2px;
         }
       }
     }
  }

.buy, .sell {
  font-size: 10px;
  text-transform: capitalize;
  font-weight: 400;
  letter-spacing: .2px;
}

.cell {
  color: rgba(0, 0, 0, 0.9);
  font-size: 10px;
  font-weight: 400;
}

.header {
  &:first-child {
    padding-right: 2px;
  }
}

.iconDelete {
  line-height: 0;
  cursor: pointer;
  font-size: 16px;
  color: #9b9b9b;
  vertical-align: middle;

  &:hover {
    color: $blue1;
  }
}

.filled {
  opacity: 0.4;
}
