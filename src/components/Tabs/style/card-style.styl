
$prefix = lat-tabs;

// card style
.tabs {
  &.card > :global(.{$prefix}-bar) :global(.{$prefix}-nav-container) {
    height: $tabs-card-height;
  }
  &.card > :global(.{$prefix}-bar) :global(.{$prefix}-ink-bar) {
    visibility: hidden;
  }
  &.card > :global(.{$prefix}-bar) :global(.{$prefix}-tab) {
    margin: 0;
    border: $border-width-base $border-style-base $border-color-split;
    border-bottom: 0;
    border-radius: $border-radius-base $border-radius-base 0 0;
    background: $tabs-card-head-background;
    margin-right: 2px;
    padding: 0 16px;
    transition: all 0.3s $ease-in-out;
    line-height: $tabs-card-height - 2px;
  }
  &.card > :global(.{$prefix}-bar) :global(.{$prefix}-tab-active) {
    background: $component-background;
    border-color: $border-color-split;
    color: $tabs-card-active-color;
    padding-bottom: 1px;
  }
  &.card > :global(.{$prefix}-bar) :global(.{$prefix}-tab-inactive) {
    padding: 0;
  }
  &.card > :global(.{$prefix}-bar) :global(.{$prefix}-nav-wrap) {
    margin-bottom: 0;
  }
  &.card > :global(.{$prefix}-bar) :global(.{$prefix}-tab) .close {
    color: $text-color-secondary;
    transition: all .3s;
    &:hover {
      color: $heading-color;
    }
  }

  &.card :global(.{$prefix}-content) > :global(.{$prefix}-tabpane),
  &.editable-card :global(.{$prefix}-content) > :global(.{$prefix}-tabpane ) {
    transition: none !important;
    &-inactive {
      overflow: hidden;
    }
  }

  &.card > :global(.{$prefix}-bar) :global(.{$prefix}-tab):hover .close {
    opacity: 1;
  }

  .extra-content {
    line-height: $tabs-card-height;

    .new-tab {
      width: 20px;
      height: 20px;
      line-height: 20px;
      text-align: center;
      cursor: pointer;
      border-radius: $border-radius-sm;
      border: $border-width-base $border-style-base $border-color-split;
      font-size: 12px;
      color: $text-color;
      transition: all .3s;
      &:hover {
        color: $tabs-card-active-color;
        border-color: $tabs-card-active-color;
      }
    }
  }

  // https://github.com/ant-design/ant-design/issues/4669
  .vertical&.card > :global(.{$prefix}-bar) {
    :global(.{$prefix}-nav-container) {
      height: auto;
    }
    :global(.{$prefix}-tab) {
      border-bottom: $border-width-base $border-style-base $border-color-split;
      margin-bottom: 8px;
      &-active {
        padding-bottom: 4px;
      }
      &:last-child {
        margin-bottom: 8px;
      }
    }
    :global(.{$prefix}-new-tab) {
      width: 90%;
    }
  }

  .vertical&.card:global(.{$prefix}-left) > :global(.{$prefix}-bar) {
    :global(.{$prefix}-nav-wrap){
      margin-right: 0;
    }
    :global(.{$prefix}-tab) {
      border-right: 0;
      border-radius: $border-radius-base 0 0 $border-radius-base;
      margin-right: 1px;
      &-active {
        margin-right: -1px;
        padding-right: 18px;
      }
    }
  }

  .vertical&.card&-right > :global(.{$prefix}-bar) {
    :global(.{$prefix}-nav-wrap){
      margin-left: 0;
    }
    :global(.{$prefix}-tab) {
      border-left: 0;
      border-radius: 0 $border-radius-base $border-radius-base 0;
      margin-left: 1px;
      &-active {
        margin-left: -1px;
        padding-left: 18px;
      }
    }
  }

  // https://github.com/ant-design/ant-design/issues/9104
  &.card&-bottom > :global(.{$prefix}-bar) :global(.{$prefix}-tab) {
    border-bottom: $border-width-base $border-style-base $border-color-split;
    border-top: 0;
    border-radius: 0 0 $border-radius-base $border-radius-base;
  }

  &.card&-bottom > :global(.{$prefix}-bar) :global(.{$prefix}-tab-active) {
    color: $primary-color;
    padding-bottom: 0;
    padding-top: 1px;
  }
}
