.container {
  width: 260px;
  height: 171px;
  padding: 5px 10px;
  border: 1px solid $grey1;
  cursor: pointer;
  margin-right: 5px;
  margin-left: 5px;
  margin-bottom: 20px;
  position: relative;
  transition: border-color 0.3s;
  overflow: hidden;
  background: #fff;
  color: $grey4;

  &.isHighlighted {
    box-shadow: 0 0 15px $blue1;
  }

  &:hover {
    border-color: $blue1;

    .overflow {
      left: 0;
      opacity: 1;
      transition: left 0s, opacity .2s;
    }
  }
}

.topline {
  clearfix();
  position: relative;

  .logo {
    position: absolute;
    z-index: 1;
    left: 0;
    top: 4px;
    width: 38px;
    height: 41px;
    background: #fff no-repeat center;
    background-size: contain;
  }

  .title {
    ellipsisOverflow();
    font-weight: 400;
    font-size: 11px;
    line-height: 18px;
    padding: 6px 85px 0 45px;
    color: $grey3;
    height: 45px;
  }

  .subtitle {
    ellipsisOverflow();
    font-size: 14px;
    font-weight: bold;
    display: block;
    color: $grey4;
  }

  .star {
    color: $grey2;
    position: absolute;
    z-index: 1;
    top: 16px;
    right: 0;
    transition: color 0.3s;
    padding: 4px;

    &.isFav {
      color: $blue1;
      &:hover {
        color: darken($blue1, 20%);
      }
    }

    &:hover {
      color: $grey3;
    }
  }

  .change {
    font-size: 12px;
    line-height: 12px;
    position: absolute;
    z-index: 1;
    top: 21px;
    right: 27px;
    color: $red1;

    &.up {
      color: $green1;
    }

    &.nil {
      color: $grey3;
    }
  }
}

.price {
  font-size: 14px;
  line-height: 16px;
  height: 22px;
  padding: 3px 0;
  margin-bottom: 3px;
  position: relative;
  transition: color .25s;
  animation-duration: 1.5s;
  animation-iteration-count: 1;
  display: inline-block;
  vertical-align: top;

  span {
    display: inline-block;
    vertical-align: top;
  }

  .valuation {
    font-size: 12px;
    padding-left: 7px;
    color: $blue2;
  }
  &.red {
    color: $red1;
    animation-name: highlight-red;
  }

  &.green {
    color: $green1;
    animation-name: highlight-green;
  }
}

.discount {
  font-size: 12px;
  line-height: 12px;
  position: absolute;
  z-index: 1;
  top: 2px;
  right: 0;

  span {
    vertical-align: baseline;
    color: $green1;
  }
}

.untilEnd {
  font-size: 12px;
  line-height: 22px;
  margin: 9px 0 10px 0;
  text-align: center;

  span {
    display: inline-block;
    vertical-align: top;
  }

  .clock {
    margin-right: 7px;
    font-size: 20px;
  }
}

.raised {
  clearfix();

  > div {
    float: left;
    width: 100%;
  }

  .title {
    font-size: 12px;
    line-height: 14px;
  }

  .nodata {
    font-size: 12px;
    line-height: 14px;
    text-align: center;
    padding-top: 6px;
  }

  .progress {
    height: 6px;
    line-height: 6px;
  }

  .subtitle {
    font-size: 9px;
    line-height: 16px;
    padding-top: 2px;
    text-align: center;
    color: $grey3;
  }
}

.bottomText {
  ellipsisOverflow();
  font-size: 10px;
  line-height: 16px;
  height: 16px;
  color: $grey3;
  position: absolute;
  z-index: 1;
  bottom: 4px;
}

.settlementTimestamp {
  font-size: 10px;
  line-height: 16px;
  height: 16px;
  color: $grey3;
  position: absolute;
  z-index: 1;
  bottom: 4px;
  right: 10px;
}

.overflow {
  z-index: 3;
  position: absolute;
  left: -99999px;
  top: 0;
  background: rgba(0, 0, 0, 0.1);
  width: 100%;
  height: 100%;
  cursor: pointer;
  opacity: 0;
  transition: left 0s ease .2s, opacity .2s;

  .overflowButton {
    background: $blue1;
    color: #fff;
    height: 42px;
    line-height: 40px;
    padding: 0 12px;
    text-transform: uppercase;
    position: absolute;
    z-index: 4;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    white-space: nowrap;
    border-radius: 2px;
  }
}

@keyframes highlight-red {
  0% {
    background-color: transparent;
  }
  12% {
    background-color: alpha($red1, 0.15);
  }
  88% {
    background-color: alpha($red1, 0.15);
  }
  100% {
    background-color: transparent;
  }
}

@keyframes highlight-green {
  0% {
    background-color: transparent;
  }
  12% {
    background-color: alpha($green1, 0.15);
  }
  88% {
    background-color: alpha($green1, 0.15);
  }
  100% {
    background-color: transparent;
  }
}
